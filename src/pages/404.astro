---
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout title="Page Not Found - OpenCodeHub">
  <div
    class="flex flex-col items-center justify-center min-h-[60vh] text-center px-4"
  >
    <h1 class="text-9xl font-bold text-gray-200 dark:text-gray-800 mb-4">
      404
    </h1>
    <h2 class="text-2xl font-semibold mb-4">Page Not Found</h2>
    <p class="text-gray-600 dark:text-gray-400 mb-8 max-w-md">
      The page you are looking for might have been removed, had its name
      changed, or is temporarily unavailable.
    </p>
    <a
      href="/"
      class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors"
    >
      Go to Homepage
    </a>
  </div>
</BaseLayout>
