---
import { getDatabase, schema } from "@/db";
import BaseLayout from "@/layouts/BaseLayout.astro";
import { desc, eq } from "drizzle-orm";
// Import Shadcn UI Components (using path aliases or relative paths)
// Assuming components are in @/components/ui or src/components/ui
import {
  Card,
  CardContent,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { UserAvatar } from "@/components/dashboard/UserAvatar";
import { Badge } from "@/components/ui/badge";

const user = Astro.locals.user;
if (!user) {
  return Astro.redirect("/login");
}

const db = getDatabase();

// Fetch user's repositories
const repos = await db.query.repositories.findMany({
  where: eq(schema.repositories.ownerId, user.id),
  orderBy: [desc(schema.repositories.updatedAt)],
});

// Calculate stats
const totalStars = repos.reduce((sum, r) => sum + (r.starCount || 0), 0);
const totalForks = repos.reduce((sum, r) => sum + (r.forkCount || 0), 0);

function timeAgo(date: string | Date) {
  const seconds = Math.floor(
    (new Date().getTime() - new Date(date).getTime()) / 1000,
  );
  if (seconds < 60) return "just now";
  if (seconds < 3600) return `${Math.floor(seconds / 60)}m ago`;
  if (seconds < 86400) return `${Math.floor(seconds / 3600)}h ago`;
  return `${Math.floor(seconds / 86400)}d ago`;
}
---

<BaseLayout title="Dashboard - OpenCodeHub">
  <div class="container py-8 max-w-7xl mx-auto space-y-8">
    <!-- Welcome Header -->
    <div
      class="flex flex-col md:flex-row items-start md:items-center justify-between gap-4"
    >
      <div class="flex items-center gap-4">
        <UserAvatar
          user={user}
          className="h-16 w-16 border-2 border-white/10"
          client:load
        />
        <div>
          <h1 class="text-3xl font-bold text-white tracking-tight">
            Welcome back, {user.displayName || user.username}
          </h1>
          <p class="text-gray-400">
            Manage your repositories and development workflow.
          </p>
        </div>
      </div>
      <div class="flex items-center gap-3">
        <a href="/stacks">
          <Button
            variant="outline"
            className="border-white/10 text-gray-300 hover:text-white hover:bg-white/5"
          >
            <svg
              class="mr-2 h-4 w-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
              ></path></svg
            >
            View Stacks
          </Button>
        </a>
        <a href="/new">
          <Button
            className="bg-gradient-to-r from-green-500 to-emerald-600 hover:from-green-600 hover:to-emerald-700 text-white border-0 shadow-lg shadow-green-500/20"
          >
            <svg
              class="mr-2 h-4 w-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 4v16m8-8H4"></path></svg
            >
            New Repository
          </Button>
        </a>
      </div>
    </div>

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <Card className="bg-[#0d1117]/50 border-white/10 backdrop-blur-sm">
        <CardHeader className="pb-2">
          <CardTitle className="text-sm font-medium text-gray-400"
            >Total Repositories</CardTitle
          >
        </CardHeader>
        <CardContent>
          <div class="text-3xl font-bold text-white">{repos.length}</div>
        </CardContent>
      </Card>
      <Card className="bg-[#0d1117]/50 border-white/10 backdrop-blur-sm">
        <CardHeader className="pb-2">
          <CardTitle className="text-sm font-medium text-gray-400"
            >Total Stars</CardTitle
          >
        </CardHeader>
        <CardContent>
          <div class="text-3xl font-bold text-yellow-400">{totalStars}</div>
        </CardContent>
      </Card>
      <Card className="bg-[#0d1117]/50 border-white/10 backdrop-blur-sm">
        <CardHeader className="pb-2">
          <CardTitle className="text-sm font-medium text-gray-400"
            >Total Forks</CardTitle
          >
        </CardHeader>
        <CardContent>
          <div class="text-3xl font-bold text-purple-400">{totalForks}</div>
        </CardContent>
      </Card>
    </div>

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- User's Repositories -->
      <div class="md:col-span-2 space-y-6">
        <div class="flex items-center justify-between">
          <h2 class="text-xl font-semibold text-white flex items-center gap-2">
            <svg
              class="h-5 w-5 text-cyan-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"
              ></path></svg
            >
            Repositories
          </h2>
          <!-- Filter/Search could go here -->
        </div>

        {
          repos.length > 0 ? (
            <div class="grid gap-4">
              {repos.map((repo) => (
                <a href={`/${user.username}/${repo.name}`} class="block group">
                  <Card className="bg-[#0d1117]/80 border-white/10 hover:border-white/20 hover:bg-[#161b22] transition-all duration-200">
                    <CardContent className="p-5">
                      <div class="flex items-start justify-between">
                        <div class="space-y-1">
                          <div class="flex items-center gap-2">
                            <h3 class="font-semibold text-lg text-white group-hover:text-cyan-400 transition-colors">
                              {repo.name}
                            </h3>
                            <Badge
                              variant="secondary"
                              className={`bg-opacity-10 border ${repo.visibility === "public" ? "border-green-500/30 text-green-400 bg-green-500" : "border-orange-500/30 text-orange-400 bg-orange-500"}`}
                            >
                              {repo.visibility}
                            </Badge>
                          </div>
                          <p class="text-sm text-gray-400 line-clamp-1">
                            {repo.description || "No description provided."}
                          </p>
                        </div>
                        <div class="text-xs text-gray-500 whitespace-nowrap">
                          {timeAgo(repo.updatedAt)}
                        </div>
                      </div>
                      <div class="mt-4 flex items-center gap-6 text-sm text-gray-500">
                        {repo.language && (
                          <div class="flex items-center gap-1.5">
                            <span class="w-2 h-2 rounded-full bg-blue-500" />
                            {repo.language}
                          </div>
                        )}
                        <div class="flex items-center gap-1 hover:text-yellow-400 transition-colors">
                          <svg
                            class="h-4 w-4"
                            fill="currentColor"
                            viewBox="0 0 20 20"
                          >
                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                          </svg>
                          {repo.starCount || 0}
                        </div>
                        <div class="flex items-center gap-1 hover:text-purple-400 transition-colors">
                          <svg
                            class="h-4 w-4"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"
                            />
                          </svg>
                          {repo.forkCount || 0}
                        </div>
                      </div>
                    </CardContent>
                  </Card>
                </a>
              ))}
            </div>
          ) : (
            <div class="bg-[#0d1117]/30 border border-white/5 rounded-xl p-12 text-center">
              <div class="inline-flex items-center justify-center p-4 bg-white/5 rounded-full mb-4">
                <svg
                  class="h-8 w-8 text-gray-500"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"
                  />
                </svg>
              </div>
              <h3 class="text-lg font-medium text-white mb-2">
                No repositories found
              </h3>
              <p class="text-gray-500 mb-6">
                Get started by creating your first repository.
              </p>
              <a href="/new">
                <Button>Create Repository</Button>
              </a>
            </div>
          )
        }
      </div>

      <!-- Sidebar / Activity -->
      <div class="space-y-6">
        <Card className="bg-[#0d1117]/50 border-white/10 backdrop-blur-sm">
          <CardHeader>
            <CardTitle className="flex items-center gap-2 text-white">
              <svg
                class="h-5 w-5 text-orange-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                ><path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg
              >
              Recent Activity
            </CardTitle>
          </CardHeader>
          <CardContent>
            <div class="text-center py-6 text-gray-500 text-sm">
              No recent activity to show.
            </div>
            <div class="pt-4 border-t border-white/5">
              <a href="/explore" class="block">
                <Button
                  variant="ghost"
                  className="w-full justify-start text-gray-400 hover:text-white"
                >
                  <svg
                    class="mr-2 h-4 w-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    ><path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
                    ></path></svg
                  >
                  Explore Repositories
                </Button>
              </a>
            </div>
          </CardContent>
        </Card>

        <Card
          className="bg-gradient-to-br from-purple-900/10 to-blue-900/10 border-white/10"
        >
          <CardContent className="p-6">
            <h3 class="font-semibold text-white mb-2">Try the CLI</h3>
            <p class="text-sm text-gray-400 mb-4">
              Push code, create PRs, and manage stacks directly from your
              terminal.
            </p>
            <div
              class="bg-black/50 rounded-lg p-3 font-mono text-xs text-green-400 mb-4 border border-white/10"
            >
              npm install -g opencodehub
            </div>
            <a
              href="/docs/cli"
              class="text-sm text-blue-400 hover:text-blue-300 hover:underline"
            >
              Read the documentation &rarr;
            </a>
          </CardContent>
        </Card>
      </div>
    </div>
  </div>
</BaseLayout>
