<script>
  import { realtime } from "@/lib/realtime-client";
  import { toast } from "sonner";

  // Connect to realtime events
  realtime.connect();

  // Listen for inbox updates
  realtime.on("inbox:refresh", (data: any) => {
    // Only show if connected message passed explicitly or if it's a real update
    if (data.connected) return;

    toast.message("Inbox Updated", {
      description: "New items available in your inbox.",
      action: {
        label: "Refresh",
        onClick: () => window.location.reload(),
      },
    });
  });

  // Listen for PR updates
  realtime.on("pr:updated", (data: any) => {
    toast.info(`PR Updated: #${data.prNumber} ${data.title}`, {
      description: "Pull request has been updated.",
    });
  });

  // Listen for notifications
  realtime.on("notification:new", (data: any) => {
    toast.success(data.title, {
      description: data.body,
      action: data.url
        ? {
            label: "View",
            onClick: () => (window.location.href = data.url),
          }
        : undefined,
    });
  });
</script>
