---
import { getDatabase, schema } from "@/db";
import { getInboxItems } from "@/lib/inbox";
import BaseLayout from "@/layouts/BaseLayout.astro";
import { and, desc, eq, inArray, or } from "drizzle-orm";
// Import Shadcn UI Components (using path aliases or relative paths)
// Assuming components are in @/components/ui or src/components/ui
import {
  Card,
  CardContent,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { UserAvatar } from "@/components/dashboard/UserAvatar";
import { Badge } from "@/components/ui/badge";

const user = Astro.locals.user;
if (!user) {
  return Astro.redirect("/login");
}

const db = getDatabase();

// Fetch user's repositories
const repos = await db.query.repositories.findMany({
  where: eq(schema.repositories.ownerId, user.id),
  orderBy: [desc(schema.repositories.updatedAt)],
});

const inboxItems = await getInboxItems(user.id);

// Calculate stats
const totalStars = repos.reduce((sum, r) => sum + (r.starCount || 0), 0);
const totalForks = repos.reduce((sum, r) => sum + (r.forkCount || 0), 0);

function timeAgo(date: string | Date) {
  const seconds = Math.floor(
    (new Date().getTime() - new Date(date).getTime()) / 1000,
  );
  if (seconds < 60) return "just now";
  if (seconds < 3600) return `${Math.floor(seconds / 60)}m ago`;
  if (seconds < 86400) return `${Math.floor(seconds / 3600)}h ago`;
  return `${Math.floor(seconds / 86400)}d ago`;
}

// Fetch Activity Feed
// 1. Get list of users followed by current user
const following = await db.query.userFollowers.findMany({
  where: eq(schema.userFollowers.followerId, user.id),
});
const followingIds = following.map((f) => f.followeeId);

// 2. Fetch activities from followed users AND current user
const activities = await db.query.activities.findMany({
  where: or(
    eq(schema.activities.userId, user.id),
    followingIds.length > 0
      ? inArray(schema.activities.userId, followingIds)
      : undefined,
  ),
  orderBy: [desc(schema.activities.createdAt)],
  limit: 20,
  with: {
    user: true,
    repository: true,
  },
});

// Helper for activity icons and text
function getActivityIcon(type: string, action: string) {
  switch (type) {
    case "create_repo":
      return {
        icon: "M12 6v6m0 0v6m0-6h6m-6 0H6",
        color: "text-green-400",
        bg: "bg-green-500/10",
      };
    case "star":
      return {
        icon: "M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.784.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z",
        color: "text-yellow-400",
        bg: "bg-yellow-500/10",
      };
    case "fork":
      return {
        icon: "M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z",
        color: "text-purple-400",
        bg: "bg-purple-500/10",
      };
    case "follow":
      return {
        icon: "M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z",
        color: "text-blue-400",
        bg: "bg-blue-500/10",
      };
    case "issue":
      return {
        icon: "M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z",
        color: "text-orange-400",
        bg: "bg-orange-500/10",
      };
    case "pull_request":
    case "open_pr":
      return {
        icon: "M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z",
        color: "text-cyan-400",
        bg: "bg-cyan-500/10",
      };
    default:
      return {
        icon: "M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z",
        color: "text-gray-400",
        bg: "bg-gray-500/10",
      };
  }
}

function getActivityText(activity: any) {
  const actor = activity.user.username;
  const repo = activity.repository?.name;

  switch (activity.type) {
    case "create_repo":
      return `created repository ${activity.repository?.name}`;
    case "star":
      return `starred ${activity.repoOwner || "someone"}/${activity.repoName || activity.repository?.name}`;
    case "fork":
      return `forked ${activity.repository?.name}`;
    case "follow":
      return `followed ${JSON.parse(activity.payload || "{}").targetUsername || "someone"}`;
    case "issue":
      return `opened issue #${JSON.parse(activity.payload || "{}").number} in ${activity.repository?.name}`;
    case "open_pr":
      return `opened PR #${JSON.parse(activity.payload || "{}").number} in ${activity.repository?.name}`;
    default:
      return `${activity.action} ${activity.type}`;
  }
}
