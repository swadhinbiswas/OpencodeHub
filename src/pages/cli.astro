---
import BaseLayout from "@/layouts/BaseLayout.astro";
import {
    Terminal,
    Cpu,
    GitBranch,
    Share2,
    Layers,
    CheckCircle2,
} from "lucide-react";

const commands = [
    {
        cmd: "och init",
        desc: "Initialize OpenCodeHub in your repository",
    },
    {
        cmd: "och auth login",
        desc: "Authenticate with your OpenCodeHub instance",
    },
    {
        cmd: "och stack create <name>",
        desc: "Create a new stacked branch",
    },
    {
        cmd: "och stack submit",
        desc: "Push changes and create/update PRs",
    },
    {
        cmd: "och stack sync",
        desc: "Rebase stack on latest main",
    },
    {
        cmd: "och status",
        desc: "View current stack visualization",
    },
];
---

<BaseLayout title="OpenCodeHub CLI - Stack-First Workflows">
    <div class="relative overflow-hidden">
        <!-- Hero Section -->
        <section class="container pt-24 pb-20 text-center relative z-10">
            <div
                class="inline-flex items-center rounded-full border border-primary/20 bg-primary/10 px-3 py-1 text-sm font-medium text-primary mb-8 animate-in fade-in slide-in-from-bottom-4 duration-500"
            >
                <Terminal className="mr-2 h-4 w-4" />
                Now Available v1.0
            </div>

            <h1
                class="mx-auto max-w-4xl text-5xl font-bold tracking-tight text-foreground sm:text-7xl mb-8 animate-in fade-in slide-in-from-bottom-5 duration-700 delay-100"
            >
                Master your workflow with <span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-purple-400"
                    >OCH CLI</span
                >
            </h1>

            <p
                class="mx-auto max-w-2xl text-lg text-muted-foreground mb-12 animate-in fade-in slide-in-from-bottom-6 duration-700 delay-200"
            >
                The command-line interface for OpenCodeHub. Manage stacked PRs,
                sync branches, and streamline your code review process directly
                from your terminal.
            </p>

            <div
                class="flex flex-col sm:flex-row items-center justify-center gap-4 animate-in fade-in slide-in-from-bottom-6 duration-700 delay-300"
            >
                <div
                    class="flex items-center gap-3 rounded-lg border bg-card px-4 py-3 font-mono text-sm text-foreground shadow-sm"
                >
                    <span class="text-primary">$</span>
                    npm install -g opencodehub-cli
                    <button
                        class="ml-4 rounded-md p-1.5 hover:bg-muted transition-colors text-muted-foreground hover:text-foreground"
                        onclick="navigator.clipboard.writeText('npm install -g opencodehub-cli')"
                        title="Copy to clipboard"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="14"
                            height="14"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            ><rect
                                width="14"
                                height="14"
                                x="8"
                                y="8"
                                rx="2"
                                ry="2"></rect><path
                                d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"
                            ></path></svg
                        >
                    </button>
                </div>
                <a
                    href="#docs"
                    class="text-sm font-medium text-primary hover:underline underline-offset-4"
                >
                    Read the docs â†’
                </a>
            </div>
        </section>

        <!-- Background Gradients -->
        <div class="absolute top-0 -z-10 h-full w-full bg-background">
            <div
                class="absolute top-[-10%] right-[-5%] h-[500px] w-[500px] rounded-full bg-primary/5 blur-[100px]"
            >
            </div>
            <div
                class="absolute bottom-[-10%] left-[-5%] h-[500px] w-[500px] rounded-full bg-purple-500/5 blur-[100px]"
            >
            </div>
        </div>
    </div>

    <!-- Features Grid -->
    <section class="container py-20 border-t border-border/40">
        <div class="grid md:grid-cols-3 gap-8">
            <div class="bg-card/50 border rounded-xl p-6 backdrop-blur-sm">
                <div
                    class="h-12 w-12 rounded-lg bg-primary/10 flex items-center justify-center text-primary mb-4"
                >
                    <Layers className="h-6 w-6" />
                </div>
                <h3 class="text-xl font-semibold mb-2">Stacked PRs</h3>
                <p class="text-muted-foreground">
                    Create and manage dependent branches easily. `och stack
                    create` handles parent linking automatically.
                </p>
            </div>
            <div class="bg-card/50 border rounded-xl p-6 backdrop-blur-sm">
                <div
                    class="h-12 w-12 rounded-lg bg-purple-500/10 flex items-center justify-center text-purple-400 mb-4"
                >
                    <Share2 className="h-6 w-6" />
                </div>
                <h3 class="text-xl font-semibold mb-2">One-Command Sync</h3>
                <p class="text-muted-foreground">
                    `och stack submit` pushes your entire stack and updates all
                    PRs in the chain at once.
                </p>
            </div>
            <div class="bg-card/50 border rounded-xl p-6 backdrop-blur-sm">
                <div
                    class="h-12 w-12 rounded-lg bg-blue-500/10 flex items-center justify-center text-blue-400 mb-4"
                >
                    <GitBranch className="h-6 w-6" />
                </div>
                <h3 class="text-xl font-semibold mb-2">Smart Rebase</h3>
                <p class="text-muted-foreground">
                    Rebase your whole stack onto main with `och stack sync`.
                    Conflicts are detected and handled gracefully.
                </p>
            </div>
        </div>
    </section>

    <!-- Commands Section -->
    <section id="docs" class="container py-20">
        <div class="grid lg:grid-cols-2 gap-16 items-start">
            <div>
                <h2 class="text-3xl font-bold mb-6">Quick Start Guide</h2>
                <div
                    class="space-y-8 relative before:absolute before:inset-0 before:ml-5 before:-translate-x-px md:before:mx-auto md:before:translate-x-0 before:h-full before:w-0.5 before:bg-gradient-to-b before:from-transparent before:via-border before:to-transparent"
                >
                    <div class="relative flex items-start group">
                        <div
                            class="absolute left-0 ml-5 -translate-x-1/2 rounded-full border border-border bg-background p-1"
                        >
                            <div class="h-2 w-2 rounded-full bg-primary"></div>
                        </div>
                        <div class="ml-12">
                            <h3 class="text-lg font-semibold mb-2">
                                1. Installation
                            </h3>
                            <div
                                class="rounded-md bg-muted px-4 py-2 font-mono text-sm"
                            >
                                npm install -g opencodehub-cli
                            </div>
                        </div>
                    </div>

                    <div class="relative flex items-start group">
                        <div
                            class="absolute left-0 ml-5 -translate-x-1/2 rounded-full border border-border bg-background p-1"
                        >
                            <div class="h-2 w-2 rounded-full bg-primary"></div>
                        </div>
                        <div class="ml-12">
                            <h3 class="text-lg font-semibold mb-2">
                                2. Authentication
                            </h3>
                            <p class="text-muted-foreground mb-2 text-sm">
                                Login with your credentials or a token.
                            </p>
                            <div
                                class="rounded-md bg-muted px-4 py-2 font-mono text-sm"
                            >
                                och auth login
                            </div>
                        </div>
                    </div>

                    <div class="relative flex items-start group">
                        <div
                            class="absolute left-0 ml-5 -translate-x-1/2 rounded-full border border-border bg-background p-1"
                        >
                            <div class="h-2 w-2 rounded-full bg-primary"></div>
                        </div>
                        <div class="ml-12">
                            <h3 class="text-lg font-semibold mb-2">
                                3. Initialization
                            </h3>
                            <p class="text-muted-foreground mb-2 text-sm">
                                Run this once in your repository.
                            </p>
                            <div
                                class="rounded-md bg-muted px-4 py-2 font-mono text-sm"
                            >
                                och init
                            </div>
                        </div>
                    </div>

                    <div class="relative flex items-start group">
                        <div
                            class="absolute left-0 ml-5 -translate-x-1/2 rounded-full border border-border bg-background p-1"
                        >
                            <div class="h-2 w-2 rounded-full bg-primary"></div>
                        </div>
                        <div class="ml-12">
                            <h3 class="text-lg font-semibold mb-2">
                                4. Start Stacking
                            </h3>
                            <p class="text-muted-foreground mb-2 text-sm">
                                Create specific feature branches.
                            </p>
                            <div
                                class="rounded-md bg-muted px-4 py-2 font-mono text-sm"
                            >
                                och stack create feature-a
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div>
                <h2 class="text-3xl font-bold mb-6">Command Reference</h2>
                <div class="rounded-xl border bg-card overflow-hidden">
                    {
                        commands.map((item, i) => (
                            <div
                                class={`flex flex-col sm:flex-row sm:items-center justify-between p-4 ${i !== commands.length - 1 ? "border-b border-white/5" : ""} hover:bg-muted/50 transition-colors`}
                            >
                                <code class="text-sm font-mono text-primary bg-primary/10 px-2 py-1 rounded w-fit mb-2 sm:mb-0">
                                    {item.cmd}
                                </code>
                                <span class="text-sm text-muted-foreground text-right">
                                    {item.desc}
                                </span>
                            </div>
                        ))
                    }
                </div>

                <div
                    class="mt-8 p-4 rounded-lg bg-secondary/50 border border-secondary text-sm text-muted-foreground"
                >
                    <p class="flex items-center gap-2">
                        <CheckCircle2 class="h-4 w-4 text-green-500" />
                        <span
                            >Pro Tip: Use <code class="text-foreground"
                                >och status</code
                            > frequently to visualize your stack.</span
                        >
                    </p>
                </div>
            </div>
        </div>
    </section>
</BaseLayout>
