---
import { getDatabase, schema } from "@/db";
import BaseLayout from "@/layouts/BaseLayout.astro";
import { desc, eq, sql } from "drizzle-orm";

const db = getDatabase();

// Pagination
const page = parseInt(Astro.url.searchParams.get("page") || "1");
const perPage = 12;
const offset = (page - 1) * perPage;

// Get total count
let totalCount = 0;
try {
  const countResult = await db.select({ count: sql<number>`count(*)` })
    .from(schema.repositories)
    .where(eq(schema.repositories.visibility, "public"));
  totalCount = Number(countResult[0]?.count || 0);
} catch (e) {}

const totalPages = Math.ceil(totalCount / perPage);

// Fetch public repositories
const repos = await db.query.repositories.findMany({
  where: eq(schema.repositories.visibility, "public"),
  orderBy: [desc(schema.repositories.updatedAt)],
  with: {
    owner: true,
  },
  limit: perPage,
  offset: offset,
});

function timeAgo(date: string | Date) {
  const seconds = Math.floor((new Date().getTime() - new Date(date).getTime()) / 1000);
  if (seconds < 60) return "just now";
  if (seconds < 3600) return `${Math.floor(seconds / 60)}m ago`;
  if (seconds < 86400) return `${Math.floor(seconds / 3600)}h ago`;
  return `${Math.floor(seconds / 86400)}d ago`;
}

const langColors: Record<string, string> = {
  'JavaScript': 'bg-yellow-400',
  'TypeScript': 'bg-blue-500',
  'Python': 'bg-green-500',
  'Rust': 'bg-orange-500',
  'Go': 'bg-cyan-400',
  'Java': 'bg-red-500',
  'Ruby': 'bg-red-600',
  'C++': 'bg-pink-500',
  'C': 'bg-gray-500',
  'PHP': 'bg-purple-500',
};
---

<BaseLayout title="Explore - OpenCodeHub">
  <div class="container py-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-white flex items-center gap-3">
        <div class="p-2 rounded-lg bg-gradient-to-br from-cyan-500/20 to-blue-500/20 border border-cyan-500/30">
          <svg class="h-7 w-7 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </div>
        Explore
      </h1>
      <p class="text-gray-500 mt-2">Discover interesting repositories from the community</p>
    </div>

    <!-- Search and Filters -->
    <div class="relative mb-8">
      <div class="absolute -inset-[1px] bg-gradient-to-r from-cyan-500/30 via-purple-500/20 to-pink-500/30 rounded-xl blur-sm opacity-50"></div>
      <div class="relative rounded-xl border border-white/10 bg-[#0d1117]/80 backdrop-blur-sm p-4">
        <div class="flex flex-col md:flex-row gap-4">
          <div class="flex-1 relative group">
            <svg class="absolute left-3 top-1/2 -translate-y-1/2 h-4 w-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
            <input
              type="search"
              placeholder="Search repositories..."
              class="w-full rounded-lg border border-white/10 bg-white/5 pl-10 pr-4 py-2.5 text-sm text-white placeholder:text-gray-500 focus:outline-none focus:border-cyan-500/50 focus:ring-2 focus:ring-cyan-500/20 transition-all"
            />
          </div>
          <div class="flex gap-2">
            <select class="rounded-lg border border-white/10 bg-white/5 px-4 py-2 text-sm text-gray-300 focus:outline-none focus:border-cyan-500/50">
              <option>All languages</option>
              <option>JavaScript</option>
              <option>TypeScript</option>
              <option>Python</option>
              <option>Rust</option>
              <option>Go</option>
            </select>
            <select class="rounded-lg border border-white/10 bg-white/5 px-4 py-2 text-sm text-gray-300 focus:outline-none focus:border-cyan-500/50">
              <option>Recently updated</option>
              <option>Most stars</option>
              <option>Most forks</option>
              <option>Newest</option>
            </select>
          </div>
        </div>
      </div>
    </div>

    <!-- Results count -->
    {totalCount > 0 && (
      <div class="mb-4 text-sm text-gray-500">
        Showing {offset + 1}-{Math.min(offset + perPage, totalCount)} of {totalCount} repositories
      </div>
    )}

    <!-- Repository Grid -->
    {repos.length === 0 ? (
      <div class="relative">
        <div class="absolute -inset-[1px] bg-gradient-to-r from-cyan-500/20 via-purple-500/20 to-pink-500/20 rounded-xl opacity-50"></div>
        <div class="relative rounded-xl border border-white/10 bg-[#0d1117]/80 backdrop-blur-sm p-16 text-center">
          <div class="relative inline-block mb-4">
            <svg class="h-16 w-16 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
            <div class="absolute inset-0 bg-cyan-500 blur-2xl opacity-20"></div>
          </div>
          <h2 class="text-xl font-bold text-white mb-2">No repositories found</h2>
          <p class="text-gray-500">Be the first to share your work with the community!</p>
          <a
            href="/new"
            class="inline-flex items-center gap-2 px-6 py-2.5 mt-6 rounded-lg bg-gradient-to-r from-cyan-500 to-blue-600 text-sm font-medium text-white shadow-lg shadow-cyan-500/25"
          >
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Create a repository
          </a>
        </div>
      </div>
    ) : (
      <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
        {repos.map((repo) => (
          <a
            href={`/${repo.owner.username}/${repo.name}`}
            class="group relative"
          >
            <div class="absolute -inset-[1px] bg-gradient-to-r from-cyan-500/20 via-transparent to-purple-500/20 rounded-xl opacity-0 group-hover:opacity-100 transition-opacity"></div>
            <div class="relative h-full rounded-xl border border-white/10 bg-[#0d1117]/80 backdrop-blur-sm p-5 hover:bg-white/[0.02] transition-colors flex flex-col">
              <div class="flex items-start gap-3 mb-3">
                {repo.owner.avatarUrl ? (
                  <img
                    src={repo.owner.avatarUrl}
                    alt=""
                    class="h-8 w-8 rounded-full ring-2 ring-white/10"
                  />
                ) : (
                  <div class="h-8 w-8 rounded-full bg-gradient-to-br from-cyan-400 to-blue-600 flex items-center justify-center text-sm font-bold text-white ring-2 ring-white/10">
                    {repo.owner.username[0].toUpperCase()}
                  </div>
                )}
                <div class="flex-1 min-w-0">
                  <div class="flex items-center gap-2">
                    <span class="font-semibold text-white group-hover:text-cyan-400 transition-colors truncate">
                      {repo.owner.username}/{repo.name}
                    </span>
                  </div>
                  <span class="text-xs text-gray-600">
                    Updated {timeAgo(repo.updatedAt)}
                  </span>
                </div>
              </div>
              
              <p class="text-sm text-gray-400 line-clamp-2 flex-1 mb-4">
                {repo.description || "No description provided."}
              </p>
              
              <div class="flex items-center gap-4 text-xs text-gray-500 pt-3 border-t border-white/5">
                {repo.language && (
                  <div class="flex items-center gap-1">
                    <span class={`h-2.5 w-2.5 rounded-full ${langColors[repo.language] || 'bg-gray-400'}`}></span>
                    {repo.language}
                  </div>
                )}
                <div class="flex items-center gap-1">
                  <svg class="h-3.5 w-3.5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                  </svg>
                  {repo.starCount || 0}
                </div>
                <div class="flex items-center gap-1">
                  <svg class="h-3.5 w-3.5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"></path>
                  </svg>
                  {repo.forkCount || 0}
                </div>
              </div>
            </div>
          </a>
        ))}
      </div>
    )}

    <!-- Pagination -->
    {totalPages > 1 && (
      <div class="mt-8 flex items-center justify-center gap-2">
        {page > 1 && (
          <a
            href={`/explore?page=${page - 1}`}
            class="inline-flex items-center gap-2 px-4 py-2 rounded-lg border border-white/10 bg-white/5 text-sm text-gray-300 hover:bg-white/10 transition-colors"
          >
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Previous
          </a>
        )}
        
        <div class="flex items-center gap-1">
          <span class="px-3 py-2 text-sm text-gray-400">
            Page {page} of {totalPages}
          </span>
        </div>
        
        {page < totalPages && (
          <a
            href={`/explore?page=${page + 1}`}
            class="inline-flex items-center gap-2 px-4 py-2 rounded-lg border border-white/10 bg-white/5 text-sm text-gray-300 hover:bg-white/10 transition-colors"
          >
            Next
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        )}
      </div>
    )}
  </div>
</BaseLayout>
