---
import { getDatabase, schema } from "@/db";
import BaseLayout from "@/layouts/BaseLayout.astro";
import { desc, eq } from "drizzle-orm";

const user = Astro.locals.user;
if (!user) {
  return Astro.redirect("/login");
}

const db = getDatabase();

// Fetch user's starred repositories
const starredRepos = await db.query.repositoryStars.findMany({
  where: eq(schema.repositoryStars.userId, user.id),
  orderBy: [desc(schema.repositoryStars.createdAt)],
  with: {
    repository: {
      with: {
        owner: true,
      },
    },
  },
});

// Language colors
const langColors: Record<string, string> = {
  'JavaScript': 'bg-yellow-400',
  'TypeScript': 'bg-blue-500',
  'Python': 'bg-green-500',
  'Rust': 'bg-orange-500',
  'Go': 'bg-cyan-400',
  'Java': 'bg-red-500',
  'Ruby': 'bg-red-600',
  'C++': 'bg-pink-500',
  'C': 'bg-gray-500',
  'PHP': 'bg-purple-500',
};

function timeAgo(date: string | number | Date) {
  if (!date) return "";
  const seconds = Math.floor(
    (new Date().getTime() - new Date(date).getTime()) / 1000
  );
  if (seconds < 60) return "just now";
  if (seconds < 3600) return `${Math.floor(seconds / 60)}m ago`;
  if (seconds < 86400) return `${Math.floor(seconds / 3600)}h ago`;
  if (seconds < 604800) return `${Math.floor(seconds / 86400)}d ago`;
  return new Date(date).toLocaleDateString();
}
---

<BaseLayout title="Your Stars - OpenCodeHub">
  <div class="container py-8 max-w-5xl">
    <!-- Header -->
    <div class="flex items-center justify-between mb-8">
      <div>
        <h1 class="text-3xl font-bold text-white flex items-center gap-3">
          <div class="p-2 rounded-lg bg-gradient-to-br from-yellow-500/20 to-amber-500/20 border border-yellow-500/30">
            <svg class="h-7 w-7 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
            </svg>
          </div>
          Your Stars
        </h1>
        <p class="text-gray-500 mt-2">Repositories you've starred</p>
      </div>
      <div class="text-sm text-gray-400">
        {starredRepos.length} starred
      </div>
    </div>

    <!-- Search -->
    <div class="relative mb-6">
      <svg class="absolute left-3 top-1/2 -translate-y-1/2 h-4 w-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
      </svg>
      <input
        type="search"
        id="star-search"
        placeholder="Search your stars..."
        class="w-full rounded-lg border border-white/10 bg-white/5 pl-10 pr-4 py-2.5 text-sm text-white placeholder:text-gray-500 focus:outline-none focus:border-yellow-500/50 focus:ring-2 focus:ring-yellow-500/20 transition-all"
      />
    </div>

    <!-- Starred Repositories List -->
    <div class="relative">
      <div class="absolute -inset-[1px] bg-gradient-to-r from-yellow-500/20 via-transparent to-amber-500/20 rounded-xl opacity-50"></div>
      <div class="relative rounded-xl border border-white/10 bg-[#0d1117]/80 backdrop-blur-sm overflow-hidden">
        {starredRepos.length > 0 ? (
          <div id="stars-list" class="divide-y divide-white/5">
            {starredRepos.map((star) => (
              <a
                href={`/${star.repository?.owner?.username}/${star.repository?.name}`}
                class="star-item block p-5 hover:bg-white/[0.02] transition-colors group"
                data-name={star.repository?.name?.toLowerCase() || ''}
                data-desc={star.repository?.description?.toLowerCase() || ''}
              >
                <div class="flex items-start justify-between">
                  <div class="flex-1 min-w-0">
                    <div class="flex items-center gap-2 mb-1">
                      <span class="text-sm text-gray-500">
                        {star.repository?.owner?.username}
                      </span>
                      <span class="text-gray-600">/</span>
                      <h3 class="font-semibold text-cyan-400 group-hover:underline">
                        {star.repository?.name}
                      </h3>
                      <span class:list={[
                        "px-2 py-0.5 rounded-full text-xs border",
                        star.repository?.visibility === 'public' 
                          ? "border-gray-500/30 text-gray-400" 
                          : "border-yellow-500/30 text-yellow-400"
                      ]}>
                        {star.repository?.visibility}
                      </span>
                    </div>
                    
                    {star.repository?.description && (
                      <p class="text-gray-400 text-sm mb-3 line-clamp-2">
                        {star.repository.description}
                      </p>
                    )}

                    <div class="flex items-center gap-4 text-xs text-gray-500">
                      {star.repository?.language && (
                        <div class="flex items-center gap-1.5">
                          <span class={`h-3 w-3 rounded-full ${langColors[star.repository.language] || 'bg-gray-400'}`}></span>
                          {star.repository.language}
                        </div>
                      )}
                      <div class="flex items-center gap-1">
                        <svg class="h-3.5 w-3.5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                        </svg>
                        {star.repository?.starCount || 0}
                      </div>
                      <div class="flex items-center gap-1">
                        <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"></path>
                        </svg>
                        {star.repository?.forkCount || 0}
                      </div>
                      <span>Starred {timeAgo(star.createdAt)}</span>
                    </div>
                  </div>

                  <button
                    class="unstar-btn p-2 rounded-lg bg-yellow-500/10 text-yellow-400 hover:bg-yellow-500/20 transition-colors opacity-0 group-hover:opacity-100"
                    data-repo-id={star.repository?.id}
                    title="Unstar"
                    onclick="event.preventDefault(); event.stopPropagation();"
                  >
                    <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                    </svg>
                  </button>
                </div>
              </a>
            ))}
          </div>
        ) : (
          <div class="text-center py-16">
            <div class="relative inline-block mb-4">
              <svg class="h-16 w-16 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
              </svg>
              <div class="absolute inset-0 bg-yellow-500 blur-2xl opacity-20"></div>
            </div>
            <h3 class="text-lg font-semibold text-white mb-2">No starred repositories</h3>
            <p class="text-gray-500 mb-4">
              Star repositories to bookmark them for later.
            </p>
            <a
              href="/explore"
              class="inline-flex items-center gap-2 px-6 py-2.5 rounded-lg bg-gradient-to-r from-yellow-500 to-amber-600 text-sm font-medium text-white"
            >
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
              Explore repositories
            </a>
          </div>
        )}
      </div>
    </div>
  </div>
</BaseLayout>

<script>
  // Search functionality
  const searchInput = document.getElementById('star-search') as HTMLInputElement;
  const starItems = document.querySelectorAll('.star-item');
  
  searchInput?.addEventListener('input', () => {
    const query = searchInput.value.toLowerCase().trim();
    starItems.forEach((item) => {
      const name = item.getAttribute('data-name') || '';
      const desc = item.getAttribute('data-desc') || '';
      const matches = name.includes(query) || desc.includes(query);
      (item as HTMLElement).style.display = matches ? 'block' : 'none';
    });
  });
</script>
