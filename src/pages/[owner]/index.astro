                    <div class="flex items-start justify-between mb-2">
                      <div class="flex items-center gap-3">
                        <div class="p-2 rounded-lg bg-cyan-500/10">
                          <svg class="h-4 w-4 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"></path>
                          </svg>
                        </div>
                        <div>
                          <h3 class="text-lg font-semibold text-cyan-400 group-hover:underline">
                            {repo.name}
                          </h3>
                          {repo.isFork && (
                            <span class="text-xs text-gray-500">Forked</span>
                          )}
                        </div>
                        <span class:list={[
                          "px-2 py-0.5 rounded-full text-xs border",
                          repo.visibility === 'public' 
                            ? "border-gray-500/30 text-gray-400" 
                            : "border-yellow-500/30 text-yellow-400"
                        ]}>
                          {repo.visibility}
                        </span>
                      </div>
                      <div class="opacity-0 group-hover:opacity-100 transition-opacity">
                        <button class="p-2 rounded-lg bg-white/5 hover:bg-white/10 text-gray-400 hover:text-yellow-400 transition-colors">
                          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
                          </svg>
                        </button>
                      </div>
                    </div>

                    {repo.description && (
                      <p class="text-gray-400 text-sm mb-4 line-clamp-2">
                        {repo.description}
                      </p>
                    )}

                    <div class="flex items-center gap-4 text-xs text-gray-500">
                      {repo.language && (
                        <div class="flex items-center gap-1.5">
                          <span class={`h-3 w-3 rounded-full ${langColors[repo.language] || 'bg-gray-400'}`}></span>
                          {repo.language}
                        </div>
                      )}
                      {(repo.starCount || 0) > 0 && (
                        <div class="flex items-center gap-1">
                          <svg class="h-3.5 w-3.5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                          </svg>
                          {repo.starCount}
                        </div>
                      )}
                      {(repo.forkCount || 0) > 0 && (
                        <div class="flex items-center gap-1">
                          <svg class="h-3.5 w-3.5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"></path>
                          </svg>
                          {repo.forkCount}
                        </div>
                      )}
                      <span class="text-gray-600">Updated {timeAgo(repo.updatedAt)}</span>
                    </div>
                  </div>
                </div>
              </a>
            ))
          ) : (
            <div class="relative">
              <div class="absolute -inset-[1px] bg-gradient-to-r from-cyan-500/20 via-transparent to-purple-500/20 rounded-xl opacity-50"></div>
              <div class="relative rounded-xl border border-white/10 bg-[#0d1117]/80 backdrop-blur-sm p-16 text-center">
                <div class="relative inline-block mb-4">
                  <svg class="h-16 w-16 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"></path>
                  </svg>
                  <div class="absolute inset-0 bg-cyan-500 blur-2xl opacity-20"></div>
                </div>
                <h3 class="text-lg font-semibold text-white mb-2">
                  {isOwner ? "No repositories yet" : `${user.username} doesn't have any public repositories`}
                </h3>
                <p class="text-gray-500 mb-4">
                  {isOwner ? "Create your first repository to get started!" : "Check back later for new projects."}
                </p>
                {isOwner && (
                  <a
                    href="/new"
                    class="inline-flex items-center gap-2 px-6 py-2.5 rounded-lg bg-gradient-to-r from-green-500 to-emerald-600 text-sm font-medium text-white"
                  >
                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    Create a repository
                  </a>
                )}
              </div>
            </div>
          )}
        </div>
      </main>
    </div>
  </div>
</BaseLayout>
