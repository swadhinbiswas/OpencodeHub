                  <svg class="h-4 w-4 flex-shrink-0 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                  <a href={`mailto:${user.email}`} class="text-cyan-400 hover:underline truncate">
                    {user.email}
                  </a>
                </div>
              )}
              {user.website && (
                <div class="flex items-center gap-3">
                  <svg class="h-4 w-4 flex-shrink-0 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
                  </svg>
                  <a
                    href={user.website}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-cyan-400 hover:underline truncate"
                  >
                    {user.website.replace(/^https?:\/\//, '')}
                  </a>
                </div>
              )}
            </div>

            <!-- Followers -->
            <div class="flex items-center justify-center gap-4 mt-6 pt-6 border-t border-white/10 text-sm">
              <button class="flex items-center gap-1.5 text-gray-400 hover:text-white transition-colors">
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                </svg>
                <span class="font-medium text-white">0</span> followers
              </button>
              <span class="text-gray-600">Â·</span>
              <button class="flex items-center gap-1.5 text-gray-400 hover:text-white transition-colors">
                <span class="font-medium text-white">0</span> following
              </button>
            </div>

            <!-- Edit Profile Button -->
            {isOwner && (
