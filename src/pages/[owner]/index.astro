    <div class="flex flex-col lg:flex-row gap-8">
      <!-- Sidebar: User Profile -->
      <aside class="w-full lg:w-80 space-y-6">
        <!-- Profile Card -->
        <div class="relative">
          <div class="absolute -inset-[1px] bg-gradient-to-b from-cyan-500/30 via-purple-500/20 to-pink-500/30 rounded-2xl blur-sm opacity-60"></div>
          <div class="relative rounded-2xl border border-white/10 bg-[#0d1117]/90 backdrop-blur-sm p-6">
            <!-- Avatar -->
            <div class="flex justify-center mb-6">
              <div class="relative group">
                <div class="absolute -inset-1 bg-gradient-to-r from-cyan-500 via-purple-500 to-pink-500 rounded-full blur opacity-60 group-hover:opacity-100 transition-opacity"></div>
                <div class="relative w-40 h-40 rounded-full overflow-hidden border-4 border-[#0d1117] bg-gradient-to-br from-cyan-400 to-purple-600 flex items-center justify-center">
                  {user.avatarUrl ? (
                    <img
                      src={user.avatarUrl}
                      alt={user.username}
                      class="w-full h-full object-cover"
                    />
                  ) : (
                    <span class="text-5xl font-bold text-white">
                      {user.username[0].toUpperCase()}
                    </span>
                  )}
                </div>
                <!-- Online indicator -->
                <div class="absolute bottom-2 right-2 w-5 h-5 bg-green-500 rounded-full border-4 border-[#0d1117]"></div>
              </div>
            </div>

            <!-- Name & Username -->
            <div class="text-center mb-4">
              <h1 class="text-2xl font-bold text-white">{user.displayName || user.username}</h1>
              <p class="text-gray-500">@{user.username}</p>
            </div>

            <!-- Bio -->
            {user.bio && (
              <p class="text-sm text-gray-400 text-center mb-6 leading-relaxed">
                {user.bio}
              </p>
            )}

            <!-- Stats Grid -->
            <div class="grid grid-cols-3 gap-2 mb-6">
              <div class="text-center p-3 rounded-xl bg-white/5">
                <p class="text-xl font-bold text-white">{repos.length}</p>
                <p class="text-xs text-gray-500">Repos</p>
              </div>
              <div class="text-center p-3 rounded-xl bg-white/5">
                <p class="text-xl font-bold text-cyan-400">{totalStars}</p>
                <p class="text-xs text-gray-500">Stars</p>
              </div>
              <div class="text-center p-3 rounded-xl bg-white/5">
                <p class="text-xl font-bold text-purple-400">{totalForks}</p>
                <p class="text-xs text-gray-500">Forks</p>
              </div>
            </div>

            <!-- Info List -->
            <div class="space-y-3 text-sm">
              {user.company && (
                <div class="flex items-center gap-3 text-gray-400">
                  <svg class="h-4 w-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                  </svg>
                  <span>{user.company}</span>
