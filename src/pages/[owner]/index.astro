          </div>
        </div>
      </aside>

      <!-- Main Content: Repositories -->
      <main class="flex-1 space-y-6">
        <!-- Tabs -->
        <div class="flex items-center justify-between">
          <nav class="flex gap-1">
            <a
              href={`/${user.username}`}
