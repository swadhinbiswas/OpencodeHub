---
import RepoHeader from "@/components/repo/RepoHeader.astro";
import { getDatabase, schema } from "@/db";
import BaseLayout from "@/layouts/BaseLayout.astro";
import { canReadRepo } from "@/lib/permissions";
import { and, eq } from "drizzle-orm";

const { owner: ownerName, repo: repoName, slug } = Astro.params;
const db = getDatabase();

// 1. Fetch Repo & Owner
const user = await db.query.users.findFirst({
    where: eq(schema.users.username, ownerName!),
});

if (!user) return Astro.redirect("/404");

const repoData = await db.query.repositories.findFirst({
    where: and(
        eq(schema.repositories.ownerId, user.id),
        eq(schema.repositories.name, repoName!),
    ),
    with: {
        owner: true,
    },
});

if (!repoData) return Astro.redirect("/404");

// Check permissions (write access needed)
const currentUser = Astro.locals.user;
if (!currentUser) return Astro.redirect("/login");

const hasAccess = await canReadRepo(currentUser.id, repoData);
// Ideally check for write access here
if (!hasAccess) return Astro.redirect("/404");

const repo = {
    owner: repoData.owner.username,
    name: repoData.name,
    description: repoData.description,
    visibility: repoData.visibility,
    defaultBranch: repoData.defaultBranch,
    stars: repoData.starCount,
    forks: repoData.forkCount,
    watchers: repoData.watchCount,
    topics: repoData.topics ? JSON.parse(repoData.topics) : [],
    openIssueCount: repoData.openIssueCount,
    openPrCount: repoData.openPrCount,
};

// Fetch Page Content
let page: any = null;
if (schema.wikiPages) {
    page = await db.query.wikiPages.findFirst({
        where: and(
            eq(schema.wikiPages.repositoryId, repoData.id),
            eq(schema.wikiPages.slug, slug!),
        ),
    });
}

if (!page) return Astro.redirect(`/${repo.owner}/${repo.name}/wiki`);
---

<BaseLayout title={`Edit ${page.title} · Wiki · ${repo.owner}/${repo.name}`}>
    <div class="container py-6">
        <RepoHeader repo={repo} activeTab="wiki" />

        <div class="max-w-4xl mx-auto mt-8">
            <div class="relative">
                <div
                    class="absolute -inset-[1px] bg-gradient-to-r from-blue-500/20 via-purple-500/20 to-pink-500/20 rounded-xl opacity-50"
                >
                </div>
                <div
                    class="relative rounded-xl border border-white/10 bg-[#0d1117]/80 backdrop-blur-sm p-8"
                >
                    <div class="flex items-center justify-between mb-6">
                        <h1 class="text-2xl font-bold text-white">Edit Page</h1>
                        <span class="text-sm text-gray-400">{page.title}</span>
                    </div>

                    <form id="edit-wiki-form" class="space-y-6">
                        <div>
                            <label
                                for="content"
                                class="block text-sm font-medium text-gray-300 mb-2"
                                >Content (Markdown)</label
                            >
                            <div class="relative">
                                <textarea
                                    id="content"
                                    name="content"
                                    rows="15"
                                    required
                                    class="w-full px-4 py-3 rounded-lg bg-black/20 border border-white/10 text-white font-mono text-sm focus:outline-none focus:border-blue-500/50 focus:ring-1 focus:ring-blue-500/50 transition-all placeholder:text-gray-600 resize-y"
                                    >{page.content}</textarea
                                >
                                <div
                                    class="absolute bottom-3 right-3 text-xs text-gray-500"
                                >
                                    Markdown supported
                                </div>
                            </div>
                        </div>

                        <div>
                            <label
                                for="message"
                                class="block text-sm font-medium text-gray-300 mb-2"
                                >Commit Message</label
                            >
                            <input
                                type="text"
                                id="message"
                                name="message"
                                class="w-full px-4 py-2 rounded-lg bg-black/20 border border-white/10 text-white focus:outline-none focus:border-blue-500/50 focus:ring-1 focus:ring-blue-500/50 transition-all placeholder:text-gray-600"
                                placeholder="Describe your changes..."
                                value={`Update ${page.title}`}
                            />
                        </div>

                        <div
                            class="flex items-center justify-end gap-3 pt-4 border-t border-white/5"
                        >
                            <a
                                href={`/${repo.owner}/${repo.name}/wiki/${page.slug}`}
                                class="px-4 py-2 rounded-lg text-sm font-medium text-gray-400 hover:text-white hover:bg-white/5 transition-colors"
                            >
                                Cancel
                            </a>
                            <button
                                type="submit"
                                class="px-6 py-2 rounded-lg bg-gradient-to-r from-blue-500 to-purple-600 text-sm font-medium text-white shadow-lg shadow-blue-500/25 hover:shadow-blue-500/40 hover:scale-[1.02] active:scale-[0.98] transition-all"
                            >
                                Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</BaseLayout>

<script>
    const form = document.getElementById("edit-wiki-form") as HTMLFormElement;

    form?.addEventListener("submit", async (e) => {
        e.preventDefault();

        // Disable button
        const submitBtn = form.querySelector(
            'button[type="submit"]',
        ) as HTMLButtonElement;
        const oldText = submitBtn.innerText;
        submitBtn.disabled = true;
        submitBtn.innerText = "Saving...";

        const formData = new FormData(form);
        const data = {
            content: formData.get("content"),
            message: formData.get("message"),
        };

        try {
            // Get repo details from URL
            const pathParts = window.location.pathname.split("/");
            // /owner/repo/wiki/edit/slug
            const owner = pathParts[1];
            const repo = pathParts[2];
            const slug = pathParts[5]; // Wiki slug is at index 5?
            // path: /swadhin/repo/wiki/edit/my-page
            // parts: ["", "swadhin", "repo", "wiki", "edit", "my-page"]

            // Handle slashes in slug?
            // Actually simpler: we can inject it from server side but logic here works if slug doesn't have slashes.
            // If slug has slashes, it might be split further.
            // Better to extract slug from current URL based on prefix.
            const prefix = `/${owner}/${repo}/wiki/edit/`;
            const currentSlug = window.location.pathname.substring(
                prefix.length,
            );

            const res = await fetch(
                `/api/repos/${owner}/${repo}/wiki/${currentSlug}`,
                {
                    method: "PATCH",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify(data),
                },
            );

            if (res.ok) {
                // Redirect to view page
                window.location.href = `/${owner}/${repo}/wiki/${currentSlug}`;
            } else {
                alert("Failed to update wiki page");
                submitBtn.disabled = false;
                submitBtn.innerText = oldText;
            }
        } catch (err) {
            console.error(err);
            alert("An error occurred");
            submitBtn.disabled = false;
            submitBtn.innerText = oldText;
        }
    });
</script>
